<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.selectifyai"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Gerekli izinler -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Kamera özelliği -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:name=".SelectifyAi"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@drawable/dice"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dice"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.SelectifyAI.NoStatusBar"
        android:usesCleartextTraffic="true">

        <!-- Google AdMob ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4497036434463360~6154093150"/>

        <!-- Start.io (StartApp) ID -->
        <meta-data
            android:name="com.startapp.sdk.APPLICATION_ID"
            android:value="206238347"/>

        <!-- Main Activity -->
        <activity
            android:name=".AnaEkran"
            android:exported="true"
            android:theme="@style/Theme.SelectifyAI.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            
            <!-- Davet linkleri için deep link support -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                    android:host="yourapp.com" />
            </intent-filter>
            
            <!-- HTTP linki de destekle -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="yourapp.com" />
            </intent-filter>
            
            <!-- Özel app scheme ile de çalışsın -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="selectifyai" />
            </intent-filter>
        </activity>

        <receiver android:name=".ModNotificationReceiver"/>
        <receiver android:name=".TodoSingleReminderReceiver"/>

        <!-- StartApp SDK Bileşenleri -->

        <activity
            android:name="com.startapp.sdk.ads.list3d.List3DActivity"
            android:theme="@android:style/Theme"
            tools:ignore="MissingClass"/>
        <provider
            android:name="com.startapp.sdk.adsbase.StartAppInitProvider"
            android:authorities="${applicationId}.startappinitprovider"
            android:exported="false"
            tools:ignore="MissingClass"/>


        <receiver android:name="com.startapp.sdk.adsbase.remoteconfig.BootCompleteListener"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- Uygulamanın diğer aktiviteleri -->
        <activity android:name=".Premium" android:exported="true" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".AiChatActivity" android:exported="true" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".KayitOl" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".OnboardingActivity" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".ZarActivity" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".ChatListActivity" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".ilkekran" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".Ayarlar" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".Profil" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".TodoActivity" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
        <activity android:name=".ZarAiActivity" android:exported="false" android:theme="@style/Theme.SelectifyAI.FullScreen"/>
    </application>
</manifest>