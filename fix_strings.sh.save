!/bin/bash
# Fix all string resource files

# Find all strings.xml files and fix them
find app/src/main/res/values* -name "strings.xml" -exec sed -i '' 's/{str}/%s/g' {} \;

# Add formatted="false" to specific strings that need it
find app/src/main/res/values* -name "strings.xml" -exec sed -i '' 's/<string name="weather_api_url_template">/<string name="weather_api_url_template" formatted="false">/g' {} \;
find app/src/main/res/values* -name "strings.xml" -exec sed -i '' 's/<string name="user_info_format">/<string name="user_info_format" formatted="false">/g' {} \;
find app/src/main/res/values* -name "strings.xml" -exec sed -i '' 's/<string name="user_info_no_data_format">/<string name="user_info_no_data_format" formatted="false">/g' {} \;

echo "All string files have been fixed!
