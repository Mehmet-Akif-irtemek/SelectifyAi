<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text3">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text2"
            android:backgroundTint="#00205992"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/vazgeÃ§"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/bf4"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/text2"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu_settings"
                android:src="@drawable/ic_menu"
                android:tint="@color/text2" />

        </LinearLayout>

        <!-- Chat Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/messageInputContainer"
            android:layout_below="@id/headerContainer"
            android:clipToPadding="false"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:visibility="gone" />

        <!-- Typing Indicator -->
        <LinearLayout
            android:id="@+id/typingIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_above="@id/messageInputContainer"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                style="?android:attr/progressBarStyleSmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_typing"
                android:textColor="@color/text2"
                android:fontFamily="@font/bf5"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Welcome TextView moved above message input area -->

        <!-- Message Input Area -->
        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/messageInputContainer"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/headerContainer"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/bf4"
            android:gravity="center"
            android:text="HoÅŸgeldin"
            android:textColor="@color/text2"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/messageInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:background="@drawable/button1"
            android:backgroundTint="@color/card"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Image Preview Container -->
            <LinearLayout
                android:id="@+id/imagePreviewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button1"
                android:backgroundTint="@color/text"
                android:orientation="horizontal"
                android:padding="12dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/button1"
                    android:backgroundTint="@color/card"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bf5"
                        android:text="ðŸ“· GÃ¶rsel seÃ§ildi"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:alpha="0.7"
                        android:fontFamily="@font/bf5"
                        android:text="AÃ§Ä±klama ekleyin ve gÃ¶nderin"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnRemoveImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="GÃ¶rseli kaldÄ±r"
                    android:src="@drawable/ic_close"
                    android:tint="@color/white" />

            </LinearLayout>

            <!-- Input Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/button1"
                android:backgroundTint="@color/card"
                android:elevation="10dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/up"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="GÃ¶rsel ekle"
                    android:padding="12dp"
                    android:src="@drawable/ic_image"
                    android:tint="@color/text2" />

                <EditText
                    android:id="@+id/editTextMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:backgroundTint="@color/x"
                    android:fontFamily="@font/bf5"
                    android:hint="@string/hint_type_message1"
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="4"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <ImageView
                    android:id="@+id/T"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="GÃ¶nder"
                    android:src="@drawable/send_2_svgrepo_com"
                    android:tint="@color/text2" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/ai_chat_menu"
        android:background="@drawable/button1"
        android:backgroundTint="#5D67F0"/>

</androidx.drawerlayout.widget.DrawerLayout>