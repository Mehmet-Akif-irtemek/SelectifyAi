<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Profil içeriği burada -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="51dp" />

            <ImageView
                android:id="@+id/imageViewPP"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/account_svgrepo_com" />

            <Button
                android:id="@+id/buttonPPYukle"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/buttonai"
                android:backgroundTint="@color/xx"
                android:text="@string/profil_fotografi_sec"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textViewAdMevcut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bf10"
                android:text="@string/mevcut_ad"
                android:textColor="@color/text2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button1"
                android:backgroundTint="#3F669B"
                android:fontFamily="@font/bf10"
                android:hint="@string/yeni_ad_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/textViewSorumlulukMevcut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bf10"
                android:text="@string/mevcut_sorumluluk"
                android:textColor="@color/text2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextSorumluluk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button1"
                android:backgroundTint="#4C79B9"
                android:fontFamily="@font/bf10"
                android:hint="@string/yeni_sorumluluk_hint"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/buttonKaydet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/buttonai"
                android:backgroundTint="#6372F2"
                android:fontFamily="@font/bf11"
                android:text="@string/kaydet"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

    <!-- Alt Navigation aynı -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/buttonai2"
        app:backgroundTint="#639FF2"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom" />
</LinearLayout>