<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zarAiEkrani"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text3">

    <!-- Ana içerik -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Mod Seçici -->
            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/bf4"
                android:text="@string/app_name"
                android:textColor="@color/text2"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/modeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/secenekMode"
                    android:layout_width="157dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/buttonai"
                    android:backgroundTint="#4B79B8"
                    android:buttonTint="@color/white"
                    android:fontFamily="@font/bf3"
                    android:text="@string/secenek_modu_text"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/evetHayirMode"
                    android:layout_width="114dp"
                    android:layout_height="48dp"
                    android:background="@drawable/buttonai"
                    android:backgroundTint="#578CD5"
                    android:buttonTint="@color/white"
                    android:fontFamily="@font/bf3"
                    android:text="@string/evet_hayir_modu_text"
                    android:textColor="@color/white" />
            </RadioGroup>

            <!-- Seçenek Paneli -->
            <LinearLayout
                android:id="@+id/secenekPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone" />

            <!-- Evet/Hayır Paneli -->
            <LinearLayout
                android:id="@+id/evetHayirPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="visible">

                <EditText
                    android:id="@+id/inputSoru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button1"
                    android:backgroundTint="@color/x"
                    android:fontFamily="@font/bf5"
                    android:hint="@string/dice_question_hint"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/zarAnim"
                android:layout_width="300dp"
                android:layout_height="214dp"
                android:layout_marginTop="24dp"
                app:lottie_asyncUpdates="enabled"
                app:lottie_autoPlay="false"
                app:lottie_fileName="dice.json"
                app:lottie_loop="false" />

            <TextView
                android:id="@+id/tvHakSayisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bf3"
                android:text="@string/kalan_hak_placeholder"
                android:textAlignment="center"
                android:textColor="@color/text2"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/zarAtButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button1"
                android:backgroundTint="#284163"
                android:fontFamily="@font/bf1"
                android:text="@string/ai_ile_zar_at"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ppsbold"
                android:text="@string/zarsayfa1"
                android:textAlignment="center"
                android:textColor="@color/text2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ppsmediumitalic"
                android:text="@string/zarsayfa3"
                android:textAlignment="center"
                android:textColor="@color/text2" />
        </LinearLayout>
    </ScrollView>

    <!-- Arka Plan Karartması -->
    <View
        android:id="@+id/dimView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <!-- Reklam Paneli -->
    <LinearLayout
        android:id="@+id/reklamPaneli"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@drawable/buttonai"
        android:backgroundTint="@color/x"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/bf10"
            android:gravity="center"
            android:text="@string/hak_bitti_mesaj"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnReklamIzle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button1"
            android:backgroundTint="@color/freeIcon"
            android:fontFamily="@font/bf11"
            android:text="@string/reklam_izle"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLinklePaylas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/button1"
            android:backgroundTint="@color/freeIcon"
            android:fontFamily="@font/bf11"
            android:text="@string/arkada_n_davet_et"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Button
            android:id="@+id/btnPremium2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button1"
            android:backgroundTint="@color/freeTitle"
            android:fontFamily="@font/bf11"
            android:text="@string/premiuma_gec"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Sonuç Kartı -->
    <LinearLayout
        android:id="@+id/sonucKart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@drawable/sonuc_kart_gradient"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible"
        tools:visibility="gone">

        <!-- Lottie Konfeti/Parlama Animasyonu -->
        <TextView
            android:id="@+id/emojiView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:importantForAccessibility="no"
            android:text="🎲"
            android:textSize="48sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:id="@+id/cevapScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cevapText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bf10"
                    android:gravity="center"
                    android:text="@string/ai_yanit_burada"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/gerekceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ppsmediumitalic"
                    android:gravity="center"
                    android:text="Gerekçe burada"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <ImageView
                    android:id="@+id/sonucZarImage"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:alpha="0.50"
                    android:src="@drawable/f"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnTamam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button1"
                    android:backgroundTint="#4068A0"
                    android:fontFamily="@font/bf11"
                    android:text="@string/tamam"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <Button
                    android:id="@+id/btnGerekceGoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button1"
                    android:backgroundTint="@color/freeIcon"
                    android:fontFamily="@font/bf11"
                    android:text="@string/gerek_eyi_g_ster"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnPaylas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button1"
                    android:backgroundTint="@color/x"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/bf11"
                    android:text="@string/paylas"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>
        </ScrollView>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/konfetiAnim"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_fileName="load2.json"
            app:lottie_loop="false" />

        <!-- Emoji veya İkon -->

        <TextView
            android:id="@+id/sonucMetni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/bf10"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/ai_yanit_burada"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="gone" />

        <!-- AI Yorumu veya Tavsiye Alanı -->
        <TextView
            android:id="@+id/aiYorumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/ppsmediumitalic"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
