<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <!-- 6. Alt şekil – Sol üst köşe -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        app:srcCompat="@drawable/shape" />

    <!-- Diğer her şey sırayla burada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- 1. Üst görsel -->

        <!-- 2. Başlık -->
        <ImageView
            android:id="@+id/baslikustuvektor"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/a1" />

        <TextView
            android:id="@+id/Baslık"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ppsbold"
            android:text="@string/selectifyai"
            android:textColor="@color/text2"
            android:textSize="26sp" />

        <!-- 3. Açıklama -->
        <TextView
            android:id="@+id/aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/ilkekranaciklama"
            android:textAlignment="center"
            android:fontFamily="@font/ppsregular"
            android:textColor="@color/text2"
            android:textSize="18sp" />

        <!-- 4. Lottie animasyon -->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="rbt.json"
            app:lottie_loop="true" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/button1"
            android:backgroundTint="#40669C"
            android:fontFamily="@font/ppssemibold"
            android:gravity="center"
            android:text="@string/ilkekranbuton"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- 5. Buton -->
    </LinearLayout>
</FrameLayout>