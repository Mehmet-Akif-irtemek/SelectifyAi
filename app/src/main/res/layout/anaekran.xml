<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/text3">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@drawable/button1"
                        android:backgroundTint="#6372F2"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hosgeldin"
                        android:textAlignment="center"
                        android:textColor="@color/text2"
                        android:textSize="18sp"
                        android:fontFamily="@font/ppsmedium"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/anaekran1"
                        android:textAlignment="center"
                        android:textColor="@color/text2"
                        android:textSize="16sp"
                        android:fontFamily="@font/ppsmediumitalic"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/button1"
                            android:backgroundTint="#578CD5"
                            android:text="@string/Zarat"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:fontFamily="@font/ppsbold" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/buttonai"
                            android:backgroundTint="#40669C"
                            android:text="@string/Zara2t"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:fontFamily="@font/ppsbolditalic" />
                    </LinearLayout>

                    <!-- Davet ve Premium Paneli -->
                    <LinearLayout
                        android:id="@+id/panelDavetPremium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/buttonai"
                        android:backgroundTint="#40669C"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/ppsmedium"
                            android:text="@string/gunluk_hak_bitti"
                            android:textAlignment="center"
                            android:textColor="@color/text3"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="16dp" />

                        <Button
                            android:id="@+id/btnDavetEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/pro"
                            android:text="@string/invite_friend_btn"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btnPremium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttonai"
                            android:text="@string/enter_code_btn"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="13dp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/mod"
                        android:textColor="@color/text2"
                        android:textSize="16sp" />
                        android:fontFamily="@font/bf1"
                        android:layout_marginTop="20dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/modEmojiLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/buttonai"
                        android:backgroundTint="#588CD6"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/emoji_happy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ˜Š"
                            android:textSize="36sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/emoji_sad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ˜¢"
                            android:textSize="36sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/emoji_angry"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ˜ "
                            android:textSize="36sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/emoji_calm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ˜Œ"
                            android:textSize="36sp"
                            android:gravity="center" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="19dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button1"
                        android:backgroundTint="@color/card"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ppsmedium"
                            android:text="@string/card1"
                            android:textAlignment="center"
                            android:textColor="@color/text2"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ppsregular"
                            android:text="@string/konum_ornek"
                            android:textAlignment="center"
                            android:textColor="@color/text2"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonai"
                            android:backgroundTint="#639FF2"
                            android:drawableStart="@drawable/pizza"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/white"
                            android:fontFamily="@font/bf14"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/katagoriler"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/buttonai"
                            android:backgroundTint="#578CD5"
                            android:drawableStart="@drawable/backpack"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/white"
                            android:fontFamily="@font/bf1"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/katagoriler1"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/button11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/buttonai"
                            android:backgroundTint="#40669C"
                            android:drawableStart="@drawable/credit_card"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/white"
                            android:fontFamily="@font/bf8"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/katagoriler2"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <!-- Lottie Loading Animation -->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottieLoading"
                            android:layout_width="wrap_content"
                            android:layout_height="106dp"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="load.json"
                            app:lottie_loop="true" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPoi"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/buttonai"
                            android:backgroundTint="#34537F"
                            android:padding="12dp"
                            android:scrollbars="vertical">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/buttonai"
                        android:backgroundTint="#598EDD"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imageViewHava"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Hava Durumu Ä°konu"
                            app:tint="#4168A2" />

                        <TextView
                            android:id="@+id/textViewHava"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ppsmediumitalic"
                            android:maxLines="2"
                            android:text="@string/hava_durumu_yukleniyor"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/buttonai2"
                app:backgroundTint="#639FF2"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:menu="@menu/bottom" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvHakSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/buttonai"
            android:backgroundTint="#40669C"
            android:elevation="12dp"
            android:fontFamily="@font/ppsbold"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:text="@string/default_rights_display"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="80dp"
            android:clickable="true"
            app:backgroundTint="@color/text"
            app:srcCompat="@drawable/icons8_ai_240" />

        <View
            android:id="@+id/dimView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:elevation="14dp"/>

        <!-- btnPremium artÄ±k panelDavetPremium iÃ§inde, burasÄ± kaldÄ±rÄ±ldÄ± -->

    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/text3"
        app:headerLayout="@layout/navheader"
        app:itemBackground="@color/text3"
        app:itemIconTint="#6372F2"
        app:menu="@menu/menu" />

</androidx.drawerlayout.widget.DrawerLayout>
